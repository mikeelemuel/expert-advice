<div class="question-page__questions">
  <header>
    <h1>Expert Advice</h1>
    <h4>Get answers to difficult questions</h4>
  </header>
  <div class="question-page__questions--ask">
    <h1>Ask a question</h1>

    {{#if (or @titleError @tagsError)}}
      <div class="question-page__questions--ask__errors">
        There is a problem with the following form fields:
        <ul>
          {{#each @errors as |error|}}
            <li>
              {{error}}
            </li>
          {{/each}}
        </ul>
      </div>
    {{/if}}

    <div class="form-group">
      <label>
        Title
      </label>
      <Input
        data-test-input-title
        @autocomplete="off"
        @value={{@model.title}}
        @class={{"form-control"}}
      />
    </div>
    <div class="form-group">
      <label>
        Description
      </label>
      <Textarea
        @value={{@model.description}}
        @class="form-control"
        @rows={{10}}
      />
    </div>
    <div class="form-group">
      <label>
        Tags (separated by comma)
      </label>
      <Input
        data-test-input-tags
        @autocomplete="off"
        @value={{@tagList}}
        @class={{"form-control"}}
      />
    </div>

    <button
      type="button"
      data-test-ask-question-button
      class="btn btn-primary"
      {{on "click" @updateQuestion}}
    >
      {{@buttonTitle}}
    </button>
  </div>
</div>
